<%-  include  ('partials/_header');  -%>

<div class="container">
    <div class="row justify-content-md-center mb-4">
        <!-- CREATE WIKI -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h3>Create wiki for repository</h3>
                    <form action="/add" method="POST">

                        <div class="form-group">
                            <label>Entry your repository id, in prod environment this field will be
                                auto-complete.</label>
                            <input required class="form-control" type="text" name="repositoryId" value=""
                                placeholder="Repository id">
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            Create wiki
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row justify-content-md-center mb-4">
        <!-- LIST -->
        <div class="col-md-7">
            <h3>List of wikis</h3>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Repository Id</th>
                        <th>Amount of pages</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( var i = 0; i < wikis.length; i++) { %>
                    <tr>
                        <td><%=  i + 1 %></td>
                        <td><%= wikis[i].repositoryId %></td>
                        <td><%= wikis[i].pages.length %></td>
                        <td>
                            <a href="/wikidetail/<%=wikis[i]._id%>" class="btn btn-info">Go wiki</a>
                            <a href="/delete/<%=wikis[i]._id%>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MONGO DB JSON -->
<div class="container" style="margin-top: 4rem;">
    <hr>
    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <label>Data from Mongo DB:</label>
                </div>
                <div class="card-body">
                    <pre>
                        <%= wikis %>
                    </pre>
                </div>
            </div>
        </div>
    </div>
</div>


<%-  include  ('partials/_footer');  -%>