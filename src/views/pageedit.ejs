<%-  include  ('partials/_header');  -%>

<div class="container">
    <div class="row justify-content-md-center mb-4">
        <div class="col-md-5" >
            <div class="card">
                <div class="card-body">
                    <h2>Edit page </h2>
                    <form action="/pageedit/<%=page._id%>" method="POST">

                        <div class="form-group">
                            <label for="">Selected wiki</label>
                            <input disabled class="form-control" type="text" name="wikiId" value="<%= page.wikiId %>" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="">Title</label>
                            <input required class="form-control" type="text" name="title" value="<%=page.title%>" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="">Creator username</label>
                            <input required class="form-control" type="text" name="creatorUsername" value="<%=page.creatorUsername%>"
                                placeholder="Creator username">
                        </div>
                        <div class="form-group">
                            <label for="">Content</label>
                            <textarea required class="form-control" name="content" placeholder="Content"><%=page.content%></textarea>
                        </div>
                        <div class="form-group">
                            <label for="">Edition message (Optional)</label>
                            <input class="form-control" type="text" name="optionalMessage" value=""
                                placeholder="Optional edit message">
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            Save
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
   
</div>

<!-- MONGO DB JSON -->
<div class="container" style="margin-top: 4rem;">
    <hr>
    <div class="row justify-content-md-center mb-4">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <label>Data from Mongo DB:</label>
                </div>
                <div class="card-body">
                    <pre><%= page %></pre>
                </div>
            </div>
        </div>
    </div>
</div>

<%-  include  ('partials/_footer');  -%>