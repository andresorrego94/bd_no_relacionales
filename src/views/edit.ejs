<%-  include  ('partials/_header');  -%>

<pre><%= wiki %></pre>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">

                    <form action="/edit/<%=wiki._id%>" method="POST">

                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="Title"
                                value="<%=wiki.title%>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" cols="80" name="description" placeholder="Description"><%=wiki.description%> 
                    </textarea>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            Update
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<%-  include  ('partials/_footer');  -%>